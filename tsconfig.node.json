{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist_node",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/assets",
    "src/components",
    "src/content",
    "src/layouts",
    "src/pages",
    "src/utils"
  ]
}
