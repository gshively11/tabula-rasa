---
import { SITE } from '~/config.mjs'
import Layout from '~/layouts/PageLayout.astro'
import { getAbsoluteLink } from '~/utils/links'

import Hero2 from '~/components/widgets/Hero2.astro'
import Project from '~/components/widgets/Project.astro'

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
}
---

<Layout {meta}>
  <Hero2 image={{ src: import('~/assets/images/projects_laptop.png'), alt: 'Look below' }}>
    <Fragment slot="title">
      <span class="lg:inline">My Projects</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="sm:inline">
        Here are a few sample projects that showcase some of my skills.
      </span>
    </Fragment>
  </Hero2>

  <Project
    isAfterContent
    isReversed
    items={[
      {
        title: 'Vendor API Integrations',
        description: "Integrates with OpenAI's API to generate content for the blog.",
      },
      {
        title: 'Automation & CI/CD',
        description:
          'A new blog post is automatically generated and published every Friday morning using CircleCI.',
      },
    ]}
    callToAction={{
      text: 'Visit',
      href: getAbsoluteLink('/projects/ai_blog/blog'),
      icon: 'dashicons:welcome-write-blog',
    }}
    callToAction2={{
      text: 'Source Code',
      href: 'https://github.com/gshively11/tabula-rasa/tree/main/src/pages/projects/ai_blog',
      icon: 'tabler:brand-github',
    }}
    image={{
      src: import('~/assets/images/robot_at_laptop.png'),
      alt: 'Robot on laptop',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        AI-generated Blog
      </h3>
      A blog where all the content is generated by OpenAI's Davinci and DALLÂ·E APIs.
    </Fragment>
  </Project>

  <Project
    items={[
      {
        title: 'Users Accounts',
        description: 'Users must create an account to interact with the button.',
      },
      {
        title: 'Real-time Shared Experience',
        description:
          'All users share the same experience and interactions are synced in real-time across all sessions.',
      },
    ]}
    callToAction={{
      text: 'Visit',
      href: getAbsoluteLink('/projects/the_button'),
      icon: 'mdi:radio-button-checked',
    }}
    callToAction2={{
      text: 'Source Code',
      href: 'https://github.com/gshively11/tabula-rasa/tree/main/src/pages/projects/the_button',
      icon: 'tabler:brand-github',
    }}
    image={{
      src: import('~/assets/images/the_button.png'),
      alt: 'Press the button',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">The Button</h3>
      How many times can you press the button? A real-time leaderboard tracks the Top 10 button pushers.
    </Fragment>
  </Project>
</Layout>
