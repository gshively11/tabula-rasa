---
const expiredDate = new Date(0)

// Must use set instead of delete, because delete
// doesn't support httpOnly, secure, or sameSite
// options (yet).
Astro.cookies.set('tr_jwt', 'deleted', {
  path: '/',
  secure: true,
  sameSite: true,
  httpOnly: true,
  expires: expiredDate,
  maxAge: 0,
})
Astro.cookies.set('tr_un', 'deleted', {
  path: '/',
  secure: true,
  expires: expiredDate,
  maxAge: 0,
})

return Astro.redirect('/')
---
